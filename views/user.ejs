<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
  
  </head>
  <body>
    <div class="container-fluid">
        <div class="row vh-100">
            <div class="col-lg-3 bg-secondary ">
                <div class="row py-2 border-bottom">
                    <h1>AdminLTE</h1>
                </div>
                <ul class="list-unstyled">
                  <li class="my-3"><a href="/admin/user"><i class="bi bi-house-door"></i> User Information</a></li>
                  <li class="my-4-5"><a href="/admin/education"><i class="bi bi-newspaper"></i> Education</a></li>
                  <li class="my-4-5"><a href="/admin/skills"><i class="bi bi-house-door"></i> Skills</a></li>
                  <li class="my-4-5"><a href="/admin/experience"><i class="bi bi-columns-gap"></i> Experience</a></li>
                  <li class="my-4-5"><a href="admin/profile"><i class="bi bi-person-square"></i> Profile</a></li>
                  <li class="my-4-5"><a href="/admin/portfolio"><i class="bi bi-book-half"></i> Portfolio</a></li>
                  <li class="my-4-5"><a href="/admin/clients"><i class="bi bi-person"></i> Client</a></li>
                  <li class="my-4-5"><a href="/admin/social"><i class="bi bi-newspaper"></i> Social</a></li>
                  <li class="my-4-5"><a href="/admin/contact"><i class="bi bi-envelope"></i> Contact</a></li>
                </ul>
            </div>
            <div class="col-lg-9  ">
                <div class="row text-center">
                    <h2> Information User</h2> 
                      
                    <table class="table">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Name</th>
                          <th>Job</th>
                          <th>Image</th>
                          <th>Avata</th>
                          <th>Description1</th>
                          <th>Description2</th>
                          <th>Mail</th>
                          <th>Phone</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (var i =0 ; i < data.length; i++) {%>
                        <tr>
                          <td><%= data[i].id %></td>
                          <td><%= data[i].name %></td>
                          <td><%= data[i].job %></td>
                          <td><img src="../<%= data[i].image %>" class=" img-fluid" width="200px" height="10px"></td>
                          <td><img src="../<%= data[i].avata %>"  class=" img-fluid" width="130px" height="10px"></td>
                          <td><%= data[i].description1 %></td>
                          <td><textarea><%= data[i].description2 %></textarea></td>
                          <td><%= data[i].mail %></td>
                          <td><%= data[i].phone %></td>
                          <td><a href="/admin/inuser/<%= data[i].id %>">View
                            /<a href="/admin/userdele/<%= data[i].id %>">Delete</a></td>
                  
                        </tr>
                        <% }%>
                        
                      </tbody>
                    </table>
                
          
                </div>
                <!-- <a href="/create-user" class="btn btn-dark">Create</a> -->
            </div>
            
          </div>
  </body>
</html>